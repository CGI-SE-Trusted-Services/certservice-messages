                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <keystore>/home/bamboo/codesign.jks</keystore>
              <storepass>{xuMwDBggK/cHXMoR3I1DWjJcaX2SPzxvgYbDX2QjB1IvfIohS3PPsMiVAmYrcn1D}</storepass>
