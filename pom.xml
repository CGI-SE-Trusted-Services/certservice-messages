              <attach>false</attach>
              <dryRun>true</dryRun>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <executions>
              <execution>
                <id>deploy</id>
                <phase>default-deploy</phase>
                <goals>
                  <goal>deploy</goal>
                </goals>
              </execution>
              <execution>
                <id>deploy-file</id>
                <phase>deploy</phase>
                <goals>
                  <goal>deploy-file</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <file>target/signed-certservice-messages.jar</file>
              <repositoryId>dev.certificateservices.org-release</repositoryId>
